{% extends 'base.html.twig' %}

{% block title %}Rendez Vous{% endblock %}

{% block main %}
    <h1>Rendez Vous</h1>

    <table class="table">
        <tbody>
            <tr>
                <th class="droite">Id: </th>
                <td>{{ rendez_vou.id }}</td>
            </tr>
            <tr>
                <th class="droite">Titre: </th>
                <td>{{ rendez_vou.titre }}</td>
            </tr>
            <tr>
                <th class="droite">Date de début: </th>
                <td>{{ rendez_vou.dateDebut ? rendez_vou.dateDebut|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th class="droite">Heure de début: </th>
                <td>{{ rendez_vou.dateDebut ? rendez_vou.dateDebut|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th class="droite">Date de fin: </th>
                <td>{{ rendez_vou.dateFin ? rendez_vou.dateFin|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th class="droite">Heure de fin: </th>
                <td>{{ rendez_vou.dateFin ? rendez_vou.dateFin|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th class="droite">Consultant: </th>
                <td>{{ rendez_vou.consultant.prenom }} {{ rendez_vou.consultant.nom }}</td>
            </tr>
            <tr>
                <th class="droite">Commentaire: </th>
                <td>{{ rendez_vou.commentaire }}</td>
            </tr>
        </tbody>
    </table>
    <div class="consultant_show_btn col-sm-12 group_buttons">
        <button class="btn btn-secondary btn-sm" type="button">
            <a href="{{ path('rendez_vous') }}">Retourner à la liste</a>
        </button>

        <button class="btn btn-secondary btn-sm" type="button">
            <a href="{{ path('rendez_vous_edit', {'id': rendez_vou.id}) }}">Editer</a>
        </button>
        <div class="supprimer">
            {{ include('rendez_vous/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
