{% extends 'base.html.twig' %}

{% block title %}Détail d'un service{% endblock %}

{% block main %}
    <h1>Détail d'un service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Libellé</th>
                <td>{{ service.libelle }}</td>
            </tr>
        </tbody>
    </table>
    <div class="consultant_show_btn col-sm-12 group_buttons">
        <button class="btn btn-secondary btn-sm" type="button"> <a href="{{ path('service') }}">Retour à la liste</a></button>
        <button class="btn btn-secondary btn-sm" type="button"><a href="{{ path('service_edit', {'id': service.id}) }}">Editer</a></button>
        <div class="supprimer">
            {{ include('service/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
