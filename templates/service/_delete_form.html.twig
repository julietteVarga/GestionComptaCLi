<form method="post" action="{{ path('service_delete', {'id': service.id}) }}"
      onsubmit="return confirm('Etes vous sur de vouloir supprimer ce service {{ service.libelle }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
    <input type="submit" class="btn btn-secondary btn-sm text-danger" value="Supprimer">
</form>
