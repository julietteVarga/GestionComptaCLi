{% extends 'base.html.twig' %}

{% block title %}Identifiez vous!{% endblock %}

{% block main %}
    <form method="post" class="loginForm">
        <div class="card text-center">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-4">
              <p>  Vous êtes identifié en tant que: {{ app.user.username }} </p> <button class="btn btn-secondary"> <a href="{{ path('app_logout') }}">Se
                        déconnecter</a></button>
            </div>
        {% endif %}

            <div class="card-header">
                <h1 class="h3 mb-3 font-weight-normal">Veuillez vous identifier! </h1>
            </div>
            <div class="card-body">
                <label for="inputUsername">Identifiant: </label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                       required autofocus>
                <label for="inputPassword">Mot de passe: </label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
                <br>
                <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button>
            </div>
        </div>
    </form>
{% endblock %}
